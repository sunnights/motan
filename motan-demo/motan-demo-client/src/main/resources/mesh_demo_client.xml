<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:motan="http://api.weibo.com/schema/motan" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://api.weibo.com/schema/motan http://api.weibo.com/schema/motan.xsd">

    <!-- 注册中心配置 使用不同注册中心需要依赖对应的jar包。-->
    <motan:registry regProtocol="local" id="localRegistry"/>
    <motan:registry regProtocol="consul" id="consulRegistry" address="127.0.0.1:8500"/>
    <motan:registry regProtocol="zookeeper" id="zkRegistry" address="127.0.0.1:2181"/>
    <motan:registry regProtocol="mesh" id="meshRegistry" address="127.0.0.1:8002" extConfig="backupReg"/>
    <motan:registry regProtocol="direct" name="directRegistry" address="127.0.0.1:9982"/>

    <bean id="backupReg" class="com.weibo.api.motan.config.BackupRegistryConfig">
        <constructor-arg index="0" ref="zkRegistry"/>
    </bean>

    <motan:protocol id="motan2-hessian" name="motan2" haStrategy="failover" loadbalance="roundrobin"/>
    <motan:protocol id="motan2-simple" name="motan2" haStrategy="failover" loadbalance="roundrobin"/>

    <!-- 通用referer基础配置 -->
    <motan:basicReferer id="clientBasicConfig" registry="meshRegistry" protocol="motan2-hessian"
                        group="motan-demo-rpc" module="motan-demo-rpc" application="myMotanDemo"
                        connectTimeout="1000" requestTimeout="10000"
                        retries="2" throwException="true" check="true"/>

    <!-- 具体referer配置。使用方通过beanid使用服务接口类 -->
    <motan:referer id="motanDemoReferer-simple" interface="com.weibo.motan.demo.service.MotanDemoService"
                   basicReferer="clientBasicConfig"/>
</beans>